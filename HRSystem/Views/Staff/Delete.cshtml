@model Staff
@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5 mb-5">
    <div class="d-flex justify-content-center">
        <div class="w-50">
            <div class="display-5 mb-3 mt-3">Delete Staff</div>
            <div class=" p-5 border border-1 border-info ">
                <form class="form" method="post" asp-action="DeleteStaff">
                    <input asp-for="Id" hidden />
                    <div class="pb-3">
                        <span asp-validation-for="Name"></span>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control shadow-none" disabled/>
                    </div>
                    <div class="pb-3">
                        <span asp-validation-for="Position"></span>
                        <label asp-for="Position"></label>
                        <input asp-for="Position" class="form-control shadow-none" disabled />
                    </div>
                    <div class="pb-4">
                        <span asp-validation-for="Email"></span>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control shadow-none" disabled />
                    </div>
                    <div class="pb-3">
                        <button type="submit" class="btn btn-primary shadow-none" style="width:150px">Delete</button>
                        <a class="btn btn-outline-danger shadow-none" style="width:150px" asp-action="Index">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


